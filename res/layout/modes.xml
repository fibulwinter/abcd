<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        >
    <TextView android:text="@string/lesson_label"
              android:textColor="@color/red"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/lesson_topic"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            />
    <TextView android:text="@string/question_mode_label"
              android:textColor="@color/red"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/question_mode"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            />
    <TextView android:text="@string/answer_mode_label"
              android:textColor="@color/red"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/answer_mode"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
            />
    <Button android:id="@+id/start_lesson"
            android:text="@string/start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="start"/>
    <TextView android:id="@+id/lesson_result"
              android:text="Nope"
              android:textColor="@color/red"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>


</LinearLayout>